<p id="notice"><%= notice %></p>

<%= render 'pages/home' unless user_signed_in? %>

<h1>Scripts</h1>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created By</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @scripts.each do |script| %>
      <tr>
        <td><%= script.title %></td>
        <td><%= script.user.email if script.user %></td>
        <td><%= link_to 'Show', script %></td>
        <% if user_signed_in? %>
          <% if current_user.admin == true then %>
            <td><%= link_to 'Edit', edit_script_path(script) %></td>
            <td><%= link_to 'Destroy', script, method: :delete, data: { confirm: 'Are you sure?' } %></td>       
          <% else %> 
            <% if script.user == current_user %>
              <td><%= link_to 'Edit', edit_script_path(script) %></td>
              <td><%= link_to 'Destroy', script, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Script', new_script_path %>
<% end %>

