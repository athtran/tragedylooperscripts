<div class="row">
  <div class="col-md-6">

    <p>
      <strong>Title:</strong>
      <%= @script.title %>
    </p>
    <% if @script.created_by %>
    <p>
      <strong>Created by:</strong>
      <%= @script.created_by %>
    </p>
    <% end %>
    <p>
      <strong>Posted by:</strong>
      <%= @script.user.name %>
    </p>
    <p>
      <strong>Tragedy Set:</strong>
      <%= @script.tragedy_set %>
    </p>
    <p>
      <strong>Difficulty:</strong>
      <%= @script.difficulty %>
    </p>
    <p>
      <strong>Number of Loops:</strong>
      <%= @script.num_loops %>
    </p>
    <p>
      <strong>Days per Loop:</strong>
      <%= @script.days_loop %>
    </p>
    <% if @script.special_rule? %>
    <p>
      <strong>Special Rule:</strong>
      <%= raw @script.special_rule %>
    </p>
    <% end %>
  </div>

  <div class="col-md-6">
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Day</th>
          <th>Incident</th>
        </tr>
      </thead>
      <tbody> 
        <% if @script.day_1? %> 
          <tr>
            <td>Day 1</td>
            <td><%= @script.day_1 %></td>
          </tr>
        <% end %>

        <% if @script.day_2? %> 
        <tr>
          <td>Day 2</td>
          <td><%= @script.day_2 %></td>
        </tr>
        <% end %>

        <% if @script.day_3? %> 
        <tr>
          <td>Day 3</td>
          <td><%= @script.day_3 %></td>
        </tr>
        <% end %>

        <% if @script.day_4? %>     
        <tr>
          <td>Day 4</td>
          <td><%= @script.day_4 %></td>
        </tr>
        <% end %>

        <% if @script.day_5? %> 
        <tr>
          <td>Day 5</td>
          <td><%= @script.day_5 %></td>
        </tr>
        <% end %>

        <% if @script.day_6? %> 
        <tr>
          <td>Day 6</td>
          <td><%= @script.day_6 %></td>
        </tr>
        <% end %>

        <% if @script.day_7? %>    
        <tr>
          <td>Day 7</td>
          <td><%= @script.day_7 %></td>
        </tr>
        <% end %>

        <% if @script.day_8? %> 
        <tr>
          <td>Day 8</td>
          <td><%= @script.day_8 %></td>
        </tr>
        <% end %>

      </tbody>
    </table>
  </div>

</div>

 <div class="pull-right">
  <%= link_to 'Back', scripts_path, class: "btn btn-default" %>

  <!-- Small modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-sm">Mastermind Information</button>

  <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <p>The following page contains spoilers. Do not continue if you are playing the protagonist of this script.</p>
          <center>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= link_to 'Continue', mastermind_script_path, class: "btn btn-primary" %>
          </center>
      </div>
    </div>
  </div>
</div> 
<% if (user_signed_in?) then %>
  <% if (current_user.admin == true) or (@script.user == current_user) then %>
    <%= link_to 'Edit', edit_script_path(@script), class: "btn btn-default"%>
    <%= link_to 'Destroy', @script, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
  <% end %>
<% end %>

