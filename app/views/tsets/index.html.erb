<p id="notice"><%= notice %></p>

<h1>Custom Tragedy Sets</h1>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created By</th>
      <th>Last Updated</th>
    </tr>
  </thead>

  <tbody>
    <% @tsets.each do |tset| %>
      <tr>
        <td><%= link_to tset.title, tset %></td>
        <td><%= tset.user.name %></td>
        <td><%= tset.updated_at %></td>
        <% if user_signed_in? %>
          <% if current_user.admin == true then %>
            <td><%= link_to 'Destroy', tset, method: :delete, data: { confirm: 'Are you sure?' } %></td>       
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="pull-right">
  <% if user_signed_in? %>
    <%= link_to 'New Tset', new_tset_path, class: "btn btn-primary btn-lg" %>
  <% end %>
</div>